{
    "info": {
        "name": "MERN E-Commerce API",
        "description": "Complete API collection for MERN E-commerce Website",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{BASE_URL}}/api/auth/register",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{BASE_URL}}/api/auth/login",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Login Admin",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@shop.com\",\n  \"password\": \"admin123\"\n}"
                        },
                        "url": {
                            "raw": "{{BASE_URL}}/api/auth/login",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Admin - Products",
            "item": [
                {
                    "name": "Add Product",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{TOKEN}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "name",
                                    "value": "Wireless Headphones",
                                    "type": "text"
                                },
                                {
                                    "key": "price",
                                    "value": "99.99",
                                    "type": "text"
                                },
                                {
                                    "key": "description",
                                    "value": "High-quality wireless headphones with noise cancellation",
                                    "type": "text"
                                },
                                {
                                    "key": "category",
                                    "value": "Electronics",
                                    "type": "text"
                                },
                                {
                                    "key": "image",
                                    "type": "file",
                                    "src": ""
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{BASE_URL}}/api/admin/add-product",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "add-product"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Products (Admin)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{TOKEN}}"
                            }
                        ],
                        "url": {
                            "raw": "{{BASE_URL}}/api/admin/products",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "products"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Product",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{TOKEN}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "name",
                                    "value": "Updated Product Name",
                                    "type": "text"
                                },
                                {
                                    "key": "price",
                                    "value": "79.99",
                                    "type": "text"
                                },
                                {
                                    "key": "description",
                                    "value": "Updated description",
                                    "type": "text"
                                },
                                {
                                    "key": "category",
                                    "value": "Electronics",
                                    "type": "text"
                                },
                                {
                                    "key": "image",
                                    "type": "file",
                                    "src": "",
                                    "disabled": true
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{BASE_URL}}/api/admin/product/:id",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "product",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "PRODUCT_ID_HERE"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Product",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{TOKEN}}"
                            }
                        ],
                        "url": {
                            "raw": "{{BASE_URL}}/api/admin/product/:id",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "product",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "PRODUCT_ID_HERE"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Products",
            "item": [
                {
                    "name": "Get All Products",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{BASE_URL}}/api/products",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "products"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Single Product",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{BASE_URL}}/api/products/:id",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "products",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "PRODUCT_ID_HERE"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Orders",
            "item": [
                {
                    "name": "Create Order",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{TOKEN}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"items\": [\n    {\n      \"productId\": \"PRODUCT_ID_1\",\n      \"name\": \"Product Name\",\n      \"price\": 99.99,\n      \"quantity\": 2,\n      \"imageURL\": \"/uploads/product-123.jpg\"\n    }\n  ],\n  \"total\": 199.98\n}"
                        },
                        "url": {
                            "raw": "{{BASE_URL}}/api/order/create",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "order",
                                "create"
                            ]
                        }
                    }
                },
                {
                    "name": "Get My Orders",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{TOKEN}}"
                            }
                        ],
                        "url": {
                            "raw": "{{BASE_URL}}/api/order/my-orders",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "order",
                                "my-orders"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Single Order",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{TOKEN}}"
                            }
                        ],
                        "url": {
                            "raw": "{{BASE_URL}}/api/order/:id",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "order",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "ORDER_ID_HERE"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "BASE_URL",
            "value": "http://localhost:5000"
        },
        {
            "key": "TOKEN",
            "value": "YOUR_JWT_TOKEN_HERE"
        }
    ]
}